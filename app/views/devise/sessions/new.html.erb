<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>
            <h1 class="logo-name">DOLLY</h1>
        </div>
        <h3 class="text-navy"></h3>
        <p></p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: "Username", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
            </div>


            <div><%= f.submit "Entrar", class: "btn btn-primary block full-width m-b" %></div>
            <% if devise_mapping.rememberable? -%>
                <div><%= f.check_box :remember_me %> <%= f.label :'Lembre-se de mim' %></div>
            <% end -%>
            <%= link_to 'Login With Facebook', Koala::Facebook::OAuth.new.url_for_oauth_code(
                :callback => oauth_callback_url,
                :permissions => [
                    "email",
                    "user_friends",
                    "public_profile",
                    "publish_actions"
                ]
            ) %>

        <% end %>
        <%= render "devise/shared/links" %>
    </div>
</div>
