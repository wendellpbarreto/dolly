<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <%= form_for @message do |f| %>
                      <div class="form-group">
                        <%= f.text_field :when, :class => 'form-control', placeholder: 'When', data: {format: "dd/MM/yyyy hh:mm:ss"} %>
                      </div>
                      <div class="form-group">
                        <%= f.text_area :content, :class => 'form-control', placeholder: 'What should we post?' %>
                      </div>
                      <%= f.submit 'Schedule Message', :class => 'btn btn-success' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>


<%= content_for :javascript do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#message_when').datetimepicker({
      });
    })
  </script>
  <script type="text/javascript">
      $(function () {
          $('#datetimepicker4').datetimepicker();
      });
  </script>
<% end %>
